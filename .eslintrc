{	"extends": "eslint:recommended",
	"env":{
		"browser": true,
    	"node": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"js": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"settings":{
		"import/resolve": {
      		"moduleDirectory": ["node_modules", "src"]
    	}
	},
    "globals":{
    	"__DEV__":true,
    	"__PROD__":true,
    	"__CLIENT__":true,
    	"__SERVER__":true
    },
    "rules": {
		"no-console": 0,
		"new-cap": 0,
		"strict": 0,
		"prefer-template": "error",
		"no-underscore-dangle": 0,
		"no-use-before-define": 0,
		"eol-last": 0,
		"quotes": ["error", "single", {"avoidEscape": true}],
		"jsx-quotes": ["error", "prefer-single"],
		"react/jsx-no-undef": 1,
		"react/jsx-uses-react": 1,
		"react/jsx-uses-vars": 1,
		"no-var":2,
		"semi": [2,"never"],
		"default-case":2
	}
}
